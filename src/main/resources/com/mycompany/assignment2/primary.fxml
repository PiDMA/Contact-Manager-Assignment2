<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="680.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.assignment2.PrimaryController">
   <children>
      <Label text="Contact List" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label prefHeight="18.0" prefWidth="82.0" text="Find by city  " />
            <TextField fx:id="txtCity" prefHeight="26.0" prefWidth="117.0" />
            <Pane prefHeight="26.0" prefWidth="28.0" />
            <Label prefHeight="18.0" prefWidth="94.0" text="  Find By Name  " />
            <TextField fx:id="txtName" prefHeight="26.0" prefWidth="110.0" />
            <Pane prefHeight="26.0" prefWidth="56.0" />
            <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#filter" prefHeight="26.0" prefWidth="151.0" text="Search By Name" />
         </children></HBox>
      <ListView fx:id="contacts" prefHeight="404.0" prefWidth="640.0" />
      <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Pane prefHeight="26.0" prefWidth="18.0" />
            <Button fx:id="primaryButton" onAction="#switchToSecondary" onMouseClicked="#switchToSecondary" text="Add Contact" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
